{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dockerRun": {
                "containerName": "YOUR_IMAGE_NAME",
                "image": "YOUR_IMAGE_NAME:YOUR_IMAGE_TAG",
                "env": {
                    "FLASK_APP": "tg-checker/main.py",
                    "FLASK_ENV": "development"
                },
                "volumes": [
                    {
                        "containerPath": "/srv/tg-checker",
                        "localPath": "${workspaceFolder}/tg-checker"
                    }
                ],
                "ports": [
                    {
                        "containerPort": 7010,
                        "hostPort": 7010
                    }
                ]
            },
            "python": {
                "args": [
                    "run",
                    "--host",
                    "0.0.0.0",
                    "--port",
                    "7010:7010"
                ],
                "file": "tg-checker/main.py"
            }
        }
    ]
}